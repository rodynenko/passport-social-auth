body
  background-color #dddddd
  font-family sans-serif

a
  text-decoration none

.page
  display flex
  width 100vw
  height 100vh
  justify-content center
  align-items center

.inner
  padding 20px
  text-align center
  background-color white
  border-radius 5px
  border 1px solid #999
  &__text
    margin 10px 0

.login
  &__button
    display block
    padding 10px 20px
    margin-bottom 10px
    color white
    border-radius 5px
    border 1px solid transparent
    transition all 0.2s ease-in-out
    &:hover
      background-color transparent
  &_facebook
    background-color fc = #3b5998
    &:hover
      color fc
      border-color fc
  &_twitter
    background-color tc =	#00aced
    &:hover
      color tc
      border-color tc
